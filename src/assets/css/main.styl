#app, body, html {
  height: 100%;
}

input {
  border-radius: 0;
  border: 0;
  outline: 0;
}

.base-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.card-list {
  width: 80%;
  padding-top: 10px;
  margin: 0 auto;

  .card-item {
    padding: 80px 0;
    margin-top: 20px;
    font-size: 26px;
    color: #4370b0;
    text-align: center;
    border: 1px solid #f2f2f2;
    box-shadow: 2px 3px 5px #ccc;
  }
}
.personal-tax {
  background #fff
  .input-item {
    display flex;
    align-items: center
    height 45px;
    border-bottom: 1px solid #eee;

    label {
      padding-left: 10px
      font-size: 14px
      width: 76px;  
      margin-right: 10px
    }
    input {
      font-size: 14px
      flex: auto;
      height 90%
    }
  }  
}