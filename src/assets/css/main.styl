#app {
  font-family: 'Avenir', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.card-list {
  display: flex;
  justify-content: center;
  margin-top: 10px;

  .card-item {
    width: 70%;
    padding: 80px 0;
    font-size: 26px;
    color: #4370b0;
    text-align: center;
    border: 1px solid #f2f2f2;
    box-shadow: 2px 3px 5px #ccc;
  }
}